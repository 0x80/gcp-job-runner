{
  "name": "gcp-job-runner",
  "version": "0.0.0-0",
  "description": "Trivially run the same jobs locally or in the cloud",
  "bin": {
    "gcp-job-runner": "dist/cli.mjs"
  },
  "type": "module",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": "./dist/index.mjs",
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "check-types": "tsc --noEmit",
    "check-lint": "oxlint -c .oxlintrc.json --import-plugin",
    "format": "oxfmt",
    "check-format": "oxfmt --check",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "clean": "del-cli dist *.tsbuildinfo",
    "prepare": "husky"
  },
  "devDependencies": {
    "@codecompose/typescript-config": "2.3.0",
    "@types/node": "^25.0.10",
    "del-cli": "^7.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.26.0",
    "oxlint": "^1.41.0",
    "tsdown": "^0.20.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "oxfmt",
      "oxlint -c .oxlintrc.json --import-plugin"
    ],
    "*.{json,yaml,yml}": [
      "oxfmt"
    ]
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "pnpm@10.22.0"
}
