{
  "name": "gcp-job-runner",
  "version": "1.0.0-3",
  "description": "Trivially run the same jobs locally or in the cloud",
  "license": "MIT",
  "bin": {
    "job": "dist/cli.mjs"
  },
  "files": [
    "dist",
    "src"
  ],
  "type": "module",
  "sideEffects": false,
  "types": "./dist/index.d.mts",
  "exports": {
    ".": "./dist/index.mjs",
    "./cli": "./dist/cli.mjs",
    "./run-cloud": "./dist/run-cloud.mjs",
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "check-types": "tsc --noEmit",
    "check-lint": "oxlint -c .oxlintrc.json --import-plugin",
    "format": "oxfmt",
    "check-format": "oxfmt --check",
    "test": "vitest",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "coverage": "vitest run --coverage",
    "clean": "del-cli dist *.tsbuildinfo",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "prepare": "husky && tsdown"
  },
  "dependencies": {
    "@google-cloud/logging": "^11.2.0",
    "@google-cloud/secret-manager": "^6.1.1",
    "consola": "^3.4.0",
    "execa": "^9.6.1",
    "isolate-package": "1.27.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@codecompose/typescript-config": "2.3.0",
    "@types/node": "^25.0.10",
    "del-cli": "^7.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.32.0",
    "oxlint": "^1.47.0",
    "tsdown": "^0.20.1",
    "typescript": "^5.9.3",
    "vitepress": "^1.6.4",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "oxfmt",
      "oxlint -c .oxlintrc.json --import-plugin"
    ],
    "*.{json,yaml,yml}": [
      "oxfmt"
    ]
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "pnpm@10.22.0"
}
